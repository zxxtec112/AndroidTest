<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.zyfypt_421lff.LoginActivity">

    <TextView
        android:text="  "
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textView3"
        android:background="@drawable/lff2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Wellcome to Amicool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:textColor="?android:attr/textColorHighlight"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="请先登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView6"
        android:textSize="18sp"
        android:textColor="?android:attr/textColorHighlight"
        android:textColorHint="?android:attr/textColorHighlightInverse"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="用户名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:textColor="?android:attr/textColorHighlight" />

    <TextView
        android:text=" "
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:id="@+id/textView5"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:background="@android:color/background_light" />

    <TextView
        android:text="密码"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:id="@+id/textView7"
        android:textSize="18sp"
        android:background="@android:color/background_light"
        android:textColor="?android:attr/textColorHighlight"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="21dp" />

    <Button
        android:text="注册"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/button"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/button2" />

    <TextView
        android:text=" "
        android:id="@+id/textView4"
        android:textSize="36sp"
        android:background="?attr/colorControlHighlight"
        android:layout_height="380dp"
        android:layout_width="320dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
